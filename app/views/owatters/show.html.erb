<h1>Details</h1>
<p>Content: <%= @owatter.content %></p>
<% unless @owatter.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(owatter_id: @owatter.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<br>
<%= link_to 'Back', owatters_path, class: "btn outline btn-danger" %>
